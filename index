<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventario General - Diagnóstico</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }
        
        body {
            padding: 20px;
            background: #f0f0f0;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
        }
        
        header {
            text-align: center;
            margin-bottom: 30px;
            padding: 20px;
            background: #2c3e50;
            color: white;
        }
        
        .diagnostic {
            background: white;
            padding: 20px;
            margin: 20px 0;
            border-radius: 5px;
        }
        
        .catalog {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
            gap: 15px;
        }
        
        .product-card {
            background: white;
            padding: 15px;
            border: 2px solid #ddd;
            border-radius: 8px;
            text-align: center;
        }
        
        .product-image {
            width: 100px;
            height: 100px;
            margin: 0 auto 10px;
            border: 1px solid #ccc;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #f8f8f8;
        }
        
        .product-image img {
            max-width: 100%;
            max-height: 100%;
            display: block;
        }
        
        .product-code {
            font-weight: bold;
            margin-bottom: 5px;
        }
        
        .status {
            font-size: 12px;
            color: #666;
            margin-top: 5px;
        }
        
        .loaded { color: green; }
        .error { color: red; }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <h1>Diagnóstico de Imágenes</h1>
            <p>Verificando carga de imágenes</p>
        </header>
        
        <div class="diagnostic">
            <h3>Información de diagnóstico:</h3>
            <p>Ruta usada: <code>./imagenes/CODIGO.jpg</code></p>
            <p>Total de productos: <span id="totalCount">0</span></p>
            <p>Imágenes cargadas: <span id="loadedCount">0</span></p>
            <p>Errores: <span id="errorCount">0</span></p>
        </div>
        
        <div class="catalog" id="catalog">
            <!-- Los productos se cargarán aquí -->
        </div>
    </div>

    <script>
        const products = [
            { code: "01001", quantity: 34 },
            { code: "01002", quantity: 4 },
            { code: "01003", quantity: 24 }
            // ... (puedes agregar más productos para la prueba)
        ];

        let loadedCount = 0;
        let errorCount = 0;

        function loadProducts() {
            const catalog = document.getElementById('catalog');
            const totalCount = document.getElementById('totalCount');
            const loadedCountElem = document.getElementById('loadedCount');
            const errorCountElem = document.getElementById('errorCount');
            
            totalCount.textContent = products.length;
            
            products.forEach(product => {
                const productCard = document.createElement('div');
                productCard.className = 'product-card';
                
                const img = new Image();
                const imageUrl = `./imagenes/${product.code}.jpg`;
                
                img.onload = function() {
                    loadedCount++;
                    loadedCountElem.textContent = loadedCount;
                    updateStatus(productCard, 'Cargada', 'loaded');
                };
                
                img.onerror = function() {
                    errorCount++;
                    errorCountElem.textContent = errorCount;
                    updateStatus(productCard, 'Error: ' + imageUrl, 'error');
                    
                    // Intentar con otras extensiones
                    tryOtherExtensions(productCard, product.code);
                };
                
                img.src = imageUrl;
                img.alt = product.code;
                
                productCard.innerHTML = `
                    <div class="product-image">
                        <!-- La imagen se insertará aquí -->
                    </div>
                    <div class="product-code">${product.code}</div>
                    <div class="product-quantity">${product.quantity}</div>
                    <div class="status" id="status-${product.code}">Cargando...</div>
                `;
                
                productCard.querySelector('.product-image').appendChild(img);
                catalog.appendChild(productCard);
            });
        }

        function tryOtherExtensions(productCard, code) {
            const extensions = ['.jpeg', '.png', '.webp', '.gif'];
            let currentTry = 0;
            
            function tryNext() {
                if (currentTry >= extensions.length) return;
                
                const img = new Image();
                const imageUrl = `./imagenes/${code}${extensions[currentTry]}`;
                
                img.onload = function() {
                    productCard.querySelector('img').src = imageUrl;
                    updateStatus(productCard, `Cargada: ${extensions[currentTry]}`, 'loaded');
                };
                
                img.onerror = function() {
                    currentTry++;
                    tryNext();
                };
                
                img.src = imageUrl;
            }
            
            tryNext();
        }

        function updateStatus(productCard, message, className) {
            const statusElem = productCard.querySelector('.status');
            statusElem.textContent = message;
            statusElem.className = `status ${className}`;
        }

        document.addEventListener('DOMContentLoaded', loadProducts);
    </script>
</body>
</html>
