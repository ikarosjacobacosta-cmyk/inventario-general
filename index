        // Función para cargar productos en el catálogo
        function loadProducts() {
            const catalog = document.getElementById('catalog');
            const imageStatus = document.getElementById('imageStatus');
            catalog.innerHTML = '';
            
            let loadedImages = 0;
            let totalImages = products.length;
            
            products.forEach(product => {
                const productCard = document.createElement('div');
                productCard.className = 'product-card';
                
                // Rutas de imágenes - intentar diferentes extensiones
                const imagePaths = [
                    `imagenes/${product.code}.jpg`,
                    `imagenes/${product.code}.jpeg`, 
                    `imagenes/${product.code}.png`,
                    `imagenes/${product.code}.webp`
                ];
                
                productCard.innerHTML = `
                    <div class="product-image">
                        <img src="${imagePaths[0]}" 
                             alt="Producto ${product.code}"
                             onload="imageLoaded()"
                             onerror="this.onerror=null; this.src='${imagePaths[1]}';">
                    </div>
                    <div class="product-info">
                        <div class="product-code">${product.code}</div>
                        <div class="product-quantity">${product.quantity}</div>
                        <div class="product-label">Artículos</div>
                    </div>
                `;
                
                catalog.appendChild(productCard);
            });

            // Función para rastrear imágenes cargadas
            window.imageLoaded = function() {
                loadedImages++;
                if (loadedImages === totalImages) {
                    imageStatus.textContent = `Todas las imágenes cargadas correctamente (${loadedImages}/${totalImages})`;
                    imageStatus.style.color = '#27ae60';
                } else {
                    imageStatus.textContent = `Cargando imágenes... (${loadedImages}/${totalImages})`;
                }
            };

            // Si después de 3 segundos no se cargaron todas, mostrar mensaje
            setTimeout(() => {
                if (loadedImages < totalImages) {
                    imageStatus.textContent = `Cargadas ${loadedImages} de ${totalImages} imágenes. Algunas imágenes pueden no estar disponibles.`;
                    imageStatus.style.color = '#e74c3c';
                }
            }, 3000);
        }

        // Inicializar la página
        document.addEventListener('DOMContentLoaded', function() {
            loadProducts();
        });
    </script>
